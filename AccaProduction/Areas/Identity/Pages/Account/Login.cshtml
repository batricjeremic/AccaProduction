@page
@model LoginModel

@{
    ViewData["Title"] = "Prijavljivanje";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <h4>Unesite email i lozinku</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Lozinka</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Zapamti me?
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Prijava</button>
                </div>
                <div class="form-group">
                    <p>
                        <a class="btn btn-sm btn-default" asp-page="./ForgotPassword">Zaboravljena lozinka?</a>
                        <a class="btn btn-sm btn-success" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Novi korisnik (registracija)</a>
                    </p>
                    
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
